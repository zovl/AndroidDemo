<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!--###########################<gc/runFinalization>##############################-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#ff0000"
            android:textSize="16sp"
            android:text="gc/runFinalization" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="GC"
            android:id="@+id/gc" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="runFinalization"
            android:id="@+id/runFinalization" />

        <!--###########################<exit>##############################-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#ff0000"
            android:textSize="16sp"
            android:text="exit" />

        <EditText
            android:id="@+id/exitText"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:text="1"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="exit"
            android:id="@+id/exit" />

        <!--###########################<memory>##############################-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#ff0000"
            android:textSize="16sp"
            android:text="memory" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="memory"
            android:id="@+id/memory" />

        <!--###########################<hook>##############################-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#ff0000"
            android:textSize="16sp"
            android:text="hook" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="addShutdownHook"
            android:id="@+id/addShutdownHook" />

        <!--显示-->

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:src="@null"
            android:scaleType="fitXY"
            android:id="@+id/image" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text=""
            android:id="@+id/text" />

    </LinearLayout>
</ScrollView>
