<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <!--###########################<视频/音频播放>##############################-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="视频/音频播放" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="VideoView"
            android:id="@+id/videoView" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="MediaRecorder"
            android:id="@+id/mediaRecorder" />

        <!--###########################<录音/拍摄/拍照>##############################-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="录音/拍摄/拍照" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Audio Record"
            android:id="@+id/audioRecord" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CameraSurface"
            android:id="@+id/cameraSurface" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CameraTexture"
            android:id="@+id/cameraTexture" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Camera2Texture"
            android:id="@+id/camera2Texture" />

        <!--###########################<视频编辑>##############################-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="视频编辑" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Extractor"
            android:id="@+id/extractor" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Retriever"
            android:id="@+id/retriever" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Codec/Decodec"
            android:id="@+id/codec" />

        <!--###########################<MP4Parser>##############################-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="MP4Parser" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="MP4Parser"
            android:id="@+id/mp4prser" />

    </LinearLayout>
</ScrollView>
